---
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const recentPosts = [
	{ title: "Autumn Leaves: A Poetic Journey", date: "2023-09-15", slug: "autumn-leaves" },
	{ title: "The Whisper of Fall", date: "2023-09-10", slug: "whisper-of-fall" },
	{ title: "Harvest Moon Tales", date: "2023-09-05", slug: "harvest-moon-tales" },
];
---

<Layout title="Literary Autumn Blog">
	<h1>Welcome to My Autumn-Inspired Literary Blog</h1>
	<p>Explore the beauty of fall through words and imagination.</p>
	
	<h2>Recent Posts</h2>
	<ul>
		{recentPosts.map(post => (
			<li>
				<BlogPost title={post.title} date={post.date} slug={post.slug} />
			</li>
		))}
	</ul>
</Layout>

<style>
	h1 {
		color: rgb(var(--accent));
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}
	p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
	}
	h2 {
		color: rgb(var(--accent-dark));
		font-size: 1.8rem;
		margin-bottom: 1rem;
	}
	ul {
		list-style-type: none;
		padding: 0;
	}
	li {
		margin-bottom: 1rem;
	}
</style>
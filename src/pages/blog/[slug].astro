---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    {params: {slug: 'autumn-leaves'}},
    {params: {slug: 'whisper-of-fall'}},
    {params: {slug: 'harvest-moon-tales'}},
  ];
}

const { slug } = Astro.params;

// In a real application, you would fetch the post content based on the slug
const post = {
  title: slug.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' '),
  date: '2023-09-15',
  content: `This is the content for the ${slug} post. In a real application, this would be fetched from a database or markdown files.`
};
---

<Layout title={post.title}>
  <article>
    <h1>{post.title}</h1>
    <p class="date">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
    <div class="content">
      {post.content}
    </div>
  </article>
</Layout>

<style>
  h1 {
    color: rgb(var(--accent));
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  .date {
    color: rgb(var(--accent-dark));
    font-size: 1rem;
    margin-bottom: 2rem;
  }
  .content {
    font-size: 1.1rem;
    line-height: 1.6;
  }
</style>
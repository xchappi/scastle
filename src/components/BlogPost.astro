---
interface Props {
	title: string;
	date: string;
	slug: string;
}

const { title, date, slug } = Astro.props;
---

<article class="blog-post">
	<h3><a href={`/blog/${slug}`}>{title}</a></h3>
	<p class="date">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
</article>

<style>
	.blog-post {
		background-color: rgba(var(--accent-light), 0.1);
		padding: 1rem;
		border-radius: 8px;
		transition: background-color 0.3s ease;
	}
	.blog-post:hover {
		background-color: rgba(var(--accent-light), 0.2);
	}
	h3 {
		margin: 0;
		font-size: 1.2rem;
	}
	a {
		color: rgb(var(--accent));
		text-decoration: none;
	}
	.date {
		font-size: 0.9rem;
		color: rgb(var(--accent-dark));
		margin-top: 0.5rem;
	}
</style>